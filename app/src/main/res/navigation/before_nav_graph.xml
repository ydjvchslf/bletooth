<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/before_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bledot.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_findFragment"
            app:destination="@id/findFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.bledot.signup.SignupFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup" >
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/findFragment"
        android:name="com.example.bledot.find.FindFragment"
        android:label="FindPwFragment"
        tools:layout="@layout/fragment_find" >
        <action
            android:id="@+id/action_findFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>