<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.find.FindViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- 툴바 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_topbar_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Find Password"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 설명 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" >

            <include
                layout="@layout/layout_title_sub"
                app:titleText="@{`Forgot your Password?`}"
                app:subText="@{`We will send a new password to the email \n you signed up for.`}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/editText_email"
                android:background="@drawable/grey_edittext_rounded_corner_rectangle"
                android:drawableStart="@drawable/ic_login_email_resize"
                android:paddingLeft="20dp"
                android:drawablePadding="20dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:hint="Email"
                android:singleLine="true" />

            <TextView
                android:id="@+id/email_state_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This email is not valid."
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/find_pw_btn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="Find Password"
                android:textColor="@color/white"
                android:background="@drawable/blue_btn_rounded_corner_rectangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Already have account?"
                android:layout_marginTop="105dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/sign_in_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:text="Sign in"
                android:textColor="@color/main"
                android:layout_gravity="center"/>

        </LinearLayout>
</layout>