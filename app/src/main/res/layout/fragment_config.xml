<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.bledot.config.ConfigViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/configFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.bledot.ble.ConfigFragment">

        <!-- 툴바 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Config"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 콘텐트 부분 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_rock"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="50dp"
                android:src="@drawable/ic_blue_rock" />

            <TextView
                android:id="@+id/info_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ic_rock"
                app:layout_constraintStart_toEndOf="@id/ic_rock"
                android:textSize="16sp"
                android:text="이름" />

            <TextView
                android:id="@+id/info_email_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_name_textView"
                app:layout_constraintStart_toEndOf="@id/ic_rock"
                app:layout_constraintBottom_toBottomOf="@id/ic_rock"
                android:textSize="13sp"
                android:text="이메일" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/ic_rock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <!-- edit info btn -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/edit_info_btn"
                    android:layout_width="330dp"
                    android:layout_height="65dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/change_pw_btn"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_btn_rounded_corner_rectangle">

                    <ImageView
                        android:id="@+id/ic_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_setting_editinfo" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_black_right_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_list"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:text="Edit Info" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- change pw btn -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/change_pw_btn"
                    android:layout_width="330dp"
                    android:layout_height="65dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/membership_btn"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_btn_rounded_corner_rectangle"
                    android:visibility="@{viewModel.isGoogleUser() == true ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:id="@+id/ic_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_setting_changepw" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_black_right_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_device"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:text="Change PW" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- membership btn -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/membership_btn"
                    android:layout_width="330dp"
                    android:layout_height="65dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/leave_btn"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_btn_rounded_corner_rectangle">

                    <ImageView
                        android:id="@+id/ic_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_setting_membership" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_black_right_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_record"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:text="Membership" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- delete account btn -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/leave_btn"
                    android:layout_width="330dp"
                    android:layout_height="65dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/grey_btn_rounded_corner_rectangle">

                    <ImageView
                        android:id="@+id/ic_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_setting_logout" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_black_right_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ic_setting"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:text="Delete Account" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:textColor="@color/main"
                android:text="Logout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
