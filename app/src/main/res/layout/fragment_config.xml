<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.config.ConfigViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/configFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.bledot.ble.ConfigFragment">

        <!-- 툴바 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Config"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 콘텐트 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include
                layout="@layout/layout_name_mail"
                android:id="@+id/my_info"/>

            <Button
                android:id="@+id/get_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/edit_info_btn"
                android:background="@drawable/grey_btn_rounded_corner_rectangle"
                android:drawableStart="@drawable/ic_setting_editinfo"
                android:paddingStart="20dp"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:text="   edit info"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/change_pw_btn"
                android:background="@drawable/grey_btn_rounded_corner_rectangle"
                android:drawableStart="@drawable/ic_setting_changepw"
                android:paddingStart="20dp"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:text="   change pw"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/membership_btn"
                android:background="@drawable/grey_btn_rounded_corner_rectangle"
                android:drawableStart="@drawable/ic_setting_membership"
                android:paddingStart="20dp"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:text="   membership registration"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/leave_btn"
                android:background="@drawable/grey_btn_rounded_corner_rectangle"
                android:drawableStart="@drawable/ic_setting_logout"
                android:paddingStart="20dp"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:text="   delete account"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textColor="@color/main"
                android:text="Logout" />

        </LinearLayout>

    </LinearLayout>

</layout>
