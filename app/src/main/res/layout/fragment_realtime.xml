<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.realtime.RealtimeViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/realtimeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 툴바 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Record Activity"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 콘텐트 부분 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Switch
                android:id="@+id/toggle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Wearing a Vest "
                android:track="@drawable/switch_selector"
                android:thumb="@drawable/switch_thumb"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Button
                android:id="@+id/record_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/toggle_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_recording_start" />

            <TextView
                android:id="@+id/record_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/record_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="When you're ready to record,\npress the record button." />

            <Button
                android:id="@+id/zeroing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zero"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/record_textView"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/record_textView"
                app:layout_constraintStart_toEndOf="@id/zeroing"/>

            <Button
                android:id="@+id/stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/record_textView"
                app:layout_constraintStart_toEndOf="@id/start"/>

            <Button
                android:id="@+id/init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="RC init"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/zeroing"
                app:layout_constraintRight_toLeftOf="@id/Rc_start"
                android:visibility="gone" />

            <Button
                android:id="@+id/Rc_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="RC start"
                app:layout_constraintStart_toEndOf="@id/init"
                app:layout_constraintTop_toBottomOf="@id/zeroing"
                android:visibility="gone" />

            <Button
                android:id="@+id/Rc_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="RC stop"
                app:layout_constraintStart_toEndOf="@id/Rc_start"
                app:layout_constraintTop_toBottomOf="@id/start"
                android:visibility="gone" />

            <Button
                android:id="@+id/internal_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="internal erase"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Rc_start"
                android:visibility="gone" />

            <Button
                android:id="@+id/select_file_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="select file"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/internal_erase"
                android:visibility="gone" />

            <Button
                android:id="@+id/export_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="export"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/stop"
                android:visibility="gone" />

            <Button
                android:id="@+id/logger_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="logger"
                app:layout_constraintTop_toBottomOf="@id/select_file_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone" />

            <Button
                android:id="@+id/file_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="create file"
                app:layout_constraintStart_toEndOf="@id/logger_btn"
                app:layout_constraintTop_toBottomOf="@id/stop"
                android:visibility="visible" />

            <Button
                android:id="@+id/file_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="close file"
                app:layout_constraintStart_toEndOf="@id/file_save_btn"
                app:layout_constraintTop_toBottomOf="@id/stop"
                android:visibility="visible" />

            <WebView
                android:id="@+id/real_web_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/file_save_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>