<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.signup.SignupViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            layout="@layout/layout_title_sub"
            app:titleText="@{`Would you like to join?`}"
            app:subText="@{`Please fill in all your information.`}" />

        <!-- 회원가입 각 항목 부분 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <include
                    layout="@layout/layout_field_hint"
                    android:id="@+id/userName"
                    app:field="@{`Patient Name`}"
                    app:hint="@{`Enter Patient Name`}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Date of Birth`}"
                    app:hint="@{`YYYY/MM/DD`}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Gender`}"
                    app:hint="@{``}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Weigth`}"
                    app:hint="@{``}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Race`}"
                    app:hint="@{`Korean`}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Pathology`}"
                    app:hint="@{``}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Email`}"
                    app:hint="@{`abc@gmail.com`}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Password`}"
                    app:hint="@{``}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Address`}"
                    app:hint="@{``}" />

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Country`}"
                    app:hint="@{``}" />

                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="300dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="30dp"
                    android:text="sign up"
                    android:background="@drawable/blue_btn_rounded_corner_rectangle"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>