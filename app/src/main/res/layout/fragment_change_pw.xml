<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.changepw.ChangePwViewModel" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.bledot.changepw.ChangePwFragment"
            android:id="@+id/changePwFragment"
            android:orientation="vertical" >

            <!-- 툴바 영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_topbar_arrow_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Change Password"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 설명 영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" >

                <include
                    layout="@layout/layout_title_sub"
                    app:titleText="@{`Are you changing your password?`}"
                    app:subText="@{`Enter a new password and save it.\nProtect my information with a secure password.`}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 콘텐트 부분 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_field_hint"
                    android:id="@+id/current_pw"
                    app:field="@{`Current password`}"
                    app:hint="@{`Current password`}" />

                <TextView
                    android:id="@+id/crt_pw_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password matching"
                    android:textColor="@color/main"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/crt_not_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password is not matching"
                    android:textColor="@color/red"
                    android:visibility="gone"/>

                <include
                    layout="@layout/layout_pw2_hint"
                    android:id="@+id/pw"
                    app:field="@{`New password`}" />

                <TextView
                    android:id="@+id/pw_matching_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password matching"
                    android:textColor="@color/main"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/pw_not_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password is not matching"
                    android:textColor="@color/red"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/change_btn"
                    android:layout_width="300dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="15dp"
                    android:text="change"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_btn_rounded_corner_rectangle"/>

            </LinearLayout>

        </LinearLayout>

</layout>