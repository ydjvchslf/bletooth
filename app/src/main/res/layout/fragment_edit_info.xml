<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="viewModel"
            type="com.example.bledot.editinfo.EditInfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 툴바 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_topbar_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="User Info"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 설명 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" >

            <include
                layout="@layout/layout_title_sub"
                app:titleText="@{`Do you modify the information?`}"
                app:subText="@{`Please enter the information to modify and save it.`}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 회원가입 각 항목 부분 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <include layout="@layout/layout_field_hint"
                    android:id="@+id/name"
                    app:field="@{`Patient Name`}"
                    app:hint="@{`Enter Patient Name`}" />

                <include layout="@layout/layout_field_hint"
                    android:id="@+id/birth"
                    app:field="@{`Date of Birth`}"
                    app:hint="@{`YYYY/MM/DD`}" />

                <include
                    layout="@layout/layout_radio"
                    app:field="@{`Gender`}" />

                <include
                    android:id="@+id/weight_spinner"
                    layout="@layout/layout_weight_spinner"
                    app:field="@{`Weight`}"/>

                <include
                    android:id="@+id/race_spinner"
                    layout="@layout/layout_race_country_spinner"
                    app:field="@{`Race`}"/>

                <include
                    android:id="@+id/path_spinner"
                    layout="@layout/layout_race_country_spinner"
                    app:field="@{`Pathology`}"/>

                <include
                    layout="@layout/layout_field_hint"
                    app:field="@{`Phone number`}"
                    app:hint="@{`+1 999 000 00 00`}" />

                <include
                    layout="@layout/layout_address"
                    app:field="@{`Address`}" />

                <include
                    android:id="@+id/country_spinner"
                    layout="@layout/layout_race_country_spinner"
                    app:field="@{`Country`}"/>

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="300dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="100dp"
                    android:text="save"
                    android:textColor="@color/white"
                    android:background="@drawable/blue_btn_rounded_corner_rectangle"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>